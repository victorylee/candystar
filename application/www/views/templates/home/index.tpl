<script type="text/javascript">
    $(document).ready(function(){
        $('input').placeholder();
        $('.flexslider').flexslider({
            directionNav: true,
            pauseOnAction: false,
            slideshowSpeed: 3000,
            pauseOnHover:true
        });

        if($.browser.msie && ($.browser.version == "6.0" || $.browser.version == "7.0") && !$.support.style){
            alert('温馨提示:建议您使用IE8.0及以上版本浏览器浏览本站');
        }
        //刷新验证码
        $('#acode').live('click',function(){
            $.post('/home/getNewVerifycode',function(data){
                if(data){
                    $("#imgcode").attr('src','/home/generate/'+data.toString()+'/69/30');
                    $("#vcode").val(data.toString());
                }
            },'text');
        });
        var g_loginFormSubmited=false;
        $("#submit").click(function(){
            if(g_loginFormSubmited==true){
                alert("请不要重复提交！");
                return false;
            }
            if(!$.validator($("#loginForm input[name='account']").val(),'required')){
                $(".error").fadeIn().text("请输入邮箱/手机号");
                return false;
            }else{
                $(".error").fadeOut().text("");
            }
            if(!$.validator($("#loginForm input[name='pwdhash']").val(),'required')){
                $(".error").fadeIn().text("请输入密码");
                return false;
            }else{
                $(".error").fadeOut().text("");
            }
            if($.trim($("#loginForm input[name='validcode']").val()) == ''){
                $(".error").fadeIn().text("请输入验证码");
                return false;
            }else{
                $(".error").fadeOut().text("");
            }
            g_loginFormSubmited=true;
            $.post("/home/login_index",$("#loginForm").serializeObject(),function(jd){
                g_loginFormSubmited=false;
                if(jd.success == 1){ //成功
                    if(jd.tp == '004001')
                        location.href = '/job';
                    else
                        location.href = '/worker';
                }else if(jd.success == -1){  //失败
                    $(".error").fadeIn().text(jd.msg);
                }else if(jd.success == -2){
                    $(".error").fadeIn().text(jd.msg);
                }
            },"json");
            return false;
        });
        $(".reasons .col").hover(function(){
            $(this).find(".out_card").fadeOut(100);
            $(this).find(".in_card").fadeIn(500);
        },function(){
            $(this).find(".in_card").fadeOut(100);
            $(this).find(".out_card").fadeIn(500);
        });
    });
</script>
